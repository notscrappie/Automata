{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node16",
    "target": "ESNext",
    "outDir": "./dist",  
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["node"],
  }
}